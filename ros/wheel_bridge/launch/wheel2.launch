<launch>
  <env name="ROSCONSOLE_FORMAT" value="[${severity}][${thread}][${node}/${function}:${line}]: ${message}"/>
  <env name="ROS_LOG_DIR" value="/tmp/"/>
  
  <node pkg="wheel_bridge" type="wheel_bridge" name="wheel2" output="screen" respawn="true">
    <param name="serial_dev" value="/dev/serial/by-id/usb-Teensyduino_USB_Serial_5437890-if00" />
    <param name="baudrate" type="int" value="115200"/>

    <param name="input_topic" value="/wheel2" />
    <param name="output_topic" value="/wheel2_meta" />

    <param name="tf2_base_link" value="wheel2_pivot" />
    <param name="tf2_output" value="wheel2" />
  </node>

</launch>
