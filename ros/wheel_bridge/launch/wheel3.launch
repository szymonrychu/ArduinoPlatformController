<launch>
  <env name="ROSCONSOLE_FORMAT" value="[${severity}][${thread}][${node}/${function}:${line}]: ${message}"/>
  <env name="ROS_LOG_DIR" value="/tmp/"/>

  <node pkg="tf" type="static_transform_publisher" name="wheel_static_transform_3" args="-0.3325   0.24  0.0575  0 0 0 /base_link /base_wheel_3 50"/>
  
  <node pkg="wheel_bridge" type="wheel_bridge" name="wheel3" output="screen" respawn="true">
    <param name="serial_dev" value="/dev/serial/by-id/usb-Teensyduino_USB_Serial_5437890-if00" />
    <param name="id" type="int" value="3"/>
    <param name="baudrate" type="int" value="115200"/>

    <param name="input_topic" value="/wheel_3" />
    <param name="output_topic" value="/wheel_3_meta" />

    <param name="tf2_base_link" value="base_wheel_3" />
    <param name="tf2_output" value="wheel_3" />
  </node>

</launch>
